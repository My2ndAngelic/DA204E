<Window x:Class="WPF_DNC6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Width="690" Height="420">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Menu Height="auto" VerticalAlignment="Top" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4">
            <MenuItem Header="_File">
                <MenuItem Name="MenuItemNew" Header="_New" />
                <MenuItem Name="MenuItemOpen" Header="_Open" Click="MenuItemOpen_OnClick" />
                <Separator />
                <MenuItem Name="MenuItemSave" Header="_Save" />
                <MenuItem Name="MenuItemSaveAs" Header="_Save As" />
                <Separator />
                <MenuItem Name="MenuItemExit" Header="_Exit" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Name="MenuItemAbout" Header="_About" />
            </MenuItem>
        </Menu>

        <Grid Grid.Column="1" Grid.Row="2">
            <Grid.Resources>
                <Style TargetType="{x:Type Grid}">
                    <Setter Property="Margin" Value="0 0" />
                </Style>
            </Grid.Resources>
            <Grid Name="PlayArea">
                <Grid.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="0,0" />
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Button Click="GameButton_OnClick" Name="GameButton00" Grid.Row="0" Grid.Column="0" Content="X" />
                <Button Click="GameButton_OnClick" Name="GameButton01" Grid.Row="0" Grid.Column="1" Content="O" />
                <Button Click="GameButton_OnClick" Name="GameButton02" Grid.Row="0" Grid.Column="2" />
                <Button Click="GameButton_OnClick" Name="GameButton10" Grid.Row="1" Grid.Column="0" />
                <Button Click="GameButton_OnClick" Name="GameButton11" Grid.Row="1" Grid.Column="1" />
                <Button Click="GameButton_OnClick" Name="GameButton12" Grid.Row="1" Grid.Column="2" />
                <Button Click="GameButton_OnClick" Name="GameButton20" Grid.Row="2" Grid.Column="0" />
                <Button Click="GameButton_OnClick" Name="GameButton21" Grid.Row="2" Grid.Column="1" />
                <Button Click="GameButton_OnClick" Name="GameButton22" Grid.Row="2" Grid.Column="2" />
            </Grid>
        </Grid>

        <Grid x:Name="PlayMode" Grid.Row="4" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Name="ButtonGameHuman" Grid.Row="0" Grid.Column="0" FontSize="15" Click="ButtonGameHuman_OnClick">vs Human</Button>
            <Button Name="ButtonGameCompP1" Grid.Row="0" Grid.Column="2" FontSize="15" Click="ButtonGameCompP1_OnClick">vs Computer (as P1)</Button>
            <Button Name="ButtonGameCompP2" Grid.Row="0" Grid.Column="4" FontSize="15" Click="ButtonGameCompP2_OnClick">vs Computer (as P2)</Button>
        </Grid>
    </Grid>
</Window>

