<Window x:Class="WPF_DNC6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Width="750" Height="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
            <!-- <RowDefinition Height="60" /> -->
            <!-- <RowDefinition Height="20" /> -->
        </Grid.RowDefinitions>

        <!-- If the menu is weird looking, please take a look at 
        https://www.tenforums.com/tutorials/68038-set-menus-open-aligned-left-right-windows-10-a.html 
or archive link: https://web.archive.org/web/20220527214727/https://www.tenforums.com/tutorials/68038-set-menus-open-aligned-left-right-windows-10-a.html-->
        <Menu Grid.ColumnSpan="10">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel HorizontalAlignment="Left" />
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="_File">
                <MenuItem Header="_New">
                    <MenuItem Header="_PvP" Click="MenuNewPvP_OnClick" InputGestureText="Alt+1" />
                    <MenuItem Header="_PvE" Click="MenuNewPvE_OnClick" InputGestureText="Alt+2" />
                    <MenuItem Header="_EvP" Click="MenuNewEvP_OnClick" InputGestureText="Alt+3" />
                    <MenuItem Header="_EvE" Click="MenuNewEvE_OnClick" InputGestureText="Alt+4" />
                </MenuItem>
                <Separator />
                <MenuItem Name="MenuSave" Header="_Save" Click="MenuSave_OnClick" InputGestureText="Ctrl+S" />
                <MenuItem Header="_Select Folder" Click="MenuSelectFolder_OnClick" InputGestureText="Ctrl+Shift+S" />
                <Separator />
                <MenuItem Click="MenuExit_OnClick" Header="_Exit" InputGestureText="Ctrl+Q" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Click="MenuAbout_OnClick" Header="_About" />
            </MenuItem>
        </Menu>

        <Grid Grid.Row="2" Grid.Column="1" RowSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style TargetType="{x:Type Grid}">
                    <Setter Property="Margin" Value="0 0" />
                </Style>
            </Grid.Resources>
            <TextBlock Text="Play Area" TextAlignment="Center" FontSize="15" Foreground="Chocolate" FontWeight="Bold" />
            <!-- <Button Content="" Foreground="Aqua" Background="Aqua"/> -->
            <Grid Name="FieldOfPlay" Grid.Row="1" Grid.Column="0" />
        </Grid>

        <Grid Grid.Row="2" Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Top"
                       TextAlignment="Left" FontStyle="Normal" Foreground="Teal" TextWrapping="Wrap" FontWeight="Bold"
                       Text="Move History" />
            <ListBox Name="ListMoveHistory" Grid.Row="1" FontSize="15">
                <!-- https://stackoverflow.com/questions/1722456/make-listbox-items-in-wpf-not-selectable  -->
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Focusable" Value="False" />
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>

